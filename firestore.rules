rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Is the user a participant in the given tripId?
    function isTripParticipant(tripId) {
      return isSignedIn() && request.auth.uid in get(/databases/$(database)/documents/trips/$(tripId)).data.participantIds;
    }

    // Main collection rules
    match /users/{userId} {
      // A user can get their own profile.
      // Other users can get a profile if they share a trip.
      allow get: if isOwner(userId) || 
                  exists(/databases/$(database)/documents/trips/{tripId}
                    where request.auth.uid in resource.data.participantIds && userId in resource.data.participantIds);
      allow list: if false; // Never allow listing all users.
      allow create: if isOwner(userId);
      allow update, delete: if isOwner(userId);
    }

    match /trips/{tripId} {
      // Allow read access if user is a participant.
      allow get: if isTripParticipant(tripId);
      // Allow list only on queries that filter by participant.
      // Client code MUST use `where('participantIds', 'array-contains', request.auth.uid)`.
      allow list: if isSignedIn(); 
      // Allow create if user includes themself as a participant.
      allow create: if isSignedIn() && request.auth.uid in request.resource.data.participantIds;
      // Allow update/delete if user is a participant.
      allow update, delete: if isTripParticipant(tripId);

      // Location subcollection
      match /locations/{userId} {
        // Participants can see each other's locations.
        allow get, list: if isTripParticipant(tripId);
        // A user can only update their own location.
        allow create, update: if isOwner(userId);
        // A user can delete their own location data.
        allow delete: if isOwner(userId);
      }
    }
  }
}
