rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow user to read/write only their own user doc
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow read/write for trips and locations if the user is signed in.
    // For a production app, you would tighten these rules to check
    // if the user is a participant of the trip.
    match /trips/{tripId} {
      allow read, write: if request.auth != null;
    }

    match /trips/{tripId}/locations/{userId} {
      allow read, write: if request.auth != null;
    }
  }
}
