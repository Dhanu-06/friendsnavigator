{
  "entities": {
    "User": {
      "title": "User",
      "type": "object",
      "description": "Represents a user in the FriendsNavigator application.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the User entity (matches Firebase Auth UID)."
        },
        "name": {
          "type": "string",
          "description": "User's display name."
        },
        "email": {
          "type": "string",
          "description": "User's email address.",
          "format": "email"
        },
        "avatarUrl": {
          "type": "string",
          "description": "URL of the user's avatar image.",
          "format": "uri"
        }
      },
      "required": ["id", "email"]
    },
    "Trip": {
      "title": "Trip",
      "type": "object",
      "description": "Represents a trip within the FriendsNavigator application.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the Trip entity."
        },
        "name": {
          "type": "string",
          "description": "The name of the trip."
        },
        "destination": {
          "type": "object",
          "description": "The destination of the trip.",
          "properties": {
            "name": { "type": "string" },
            "lat": { "type": "number" },
            "lng": { "type": "number" }
          },
          "required": ["name", "lat", "lng"]
        },
        "description": {
          "type": "string",
          "description": "An optional description for the trip."
        },
        "ownerId": {
          "type": "string",
          "description": "The UID of the user who created the trip."
        },
        "participantIds": {
          "type": "array",
          "description": "An array of user UIDs who are part of this trip.",
          "items": {
            "type": "string"
          }
        },
        "tripType": {
          "type": "string",
          "description": "The type of trip, either 'within-city' or 'out-of-city'.",
          "enum": ["within-city", "out-of-city"]
        }
      },
      "required": ["id", "name", "destination", "ownerId", "participantIds", "tripType"]
    },
    "Location": {
      "title": "Location",
      "type": "object",
      "description": "Represents a user's live location for a specific trip.",
      "properties": {
        "lat": {
          "type": "number",
          "description": "The latitude of the user's location."
        },
        "lng": {
          "type": "number",
          "description": "The longitude of the user's location."
        },
        "lastUpdated": {
          "type": "string",
          "format": "date-time",
          "description": "Timestamp of the last location update."
        }
      },
      "required": ["lat", "lng", "lastUpdated"]
    },
     "Participant": {
      "title": "Participant",
      "type": "object",
      "description": "Stores a user's status and travel choices for a specific trip.",
      "properties": {
        "id": { "type": "string", "description": "Matches the user's UID." },
        "name": { "type": "string" },
        "avatarUrl": { "type": "string", "format": "uri" },
        "mode": {
          "type": "string",
          "description": "The selected mode of transport."
        },
        "currentLocation": {
          "type": "object",
          "properties": {
            "lat": { "type": "number" },
            "lng": { "type": "number" }
          }
        },
        "preference": {
          "type": "string",
          "enum": ["fastest", "cheapest", "comfortable"]
        },
        "selectedMode": {
          "type": "string",
          "enum": ["ola", "uber", "rapido", "metro", "bmtc", "walk"]
        },
        "suggestion": {
          "type": "object",
          "properties": {
            "recommendedMode": { "type": "string" },
            "options": {
              "type": "array",
              "items": { "$ref": "#/backend/entities/ModeOption" }
            },
            "lastCalculatedAt": { "type": "string", "format": "date-time" }
          }
        }
      },
      "required": ["id", "name", "avatarUrl"]
    },
    "ModeOption": {
      "title": "Mode Option",
      "type": "object",
      "description": "Represents a calculated travel option.",
      "properties": {
        "mode": { "type": "string" },
        "etaMinutes": { "type": "number" },
        "costEstimate": { "type": "number" },
        "explanation": { "type": "string" }
      },
      "required": ["mode", "etaMinutes", "costEstimate"]
    },
    "RideClickLog": {
      "title": "Ride Click Log",
      "type": "object",
      "description": "A log entry for a user clicking a ride-hailing button.",
      "properties": {
        "provider": { "type": "string" },
        "pickup": { "type": "object", "properties": { "lat": { "type": "number" }, "lng": { "type": "number" }, "name": { "type": "string" } } },
        "drop": { "type": "object", "properties": { "lat": { "type": "number" }, "lng": { "type": "number" }, "name": { "type": "string" } } },
        "attemptedAppUrl": { "type": "string" },
        "attemptedWebUrl": { "type": "string" },
        "ua": { "type": "string" },
        "timestamp": { "type": "number" }
      }
    }
  },
  "auth": {
    "providers": ["password", "google"]
  },
  "firestore": {
    "structure": [
      {
        "path": "/users/{userId}",
        "definition": {
          "entityName": "User",
          "schema": { "$ref": "#/backend/entities/User" },
          "description": "Stores user profile information. Only the user themselves can write to it. Other participants of a shared trip can read it."
        }
      },
      {
        "path": "/trips/{tripId}",
        "definition": {
          "entityName": "Trip",
          "schema": { "$ref": "#/backend/entities/Trip" },
          "description": "Stores core information about a trip. Participants can read/write."
        }
      },
      {
        "path": "/trips/{tripId}/locations/{userId}",
        "definition": {
          "entityName": "Location",
          "schema": { "$ref": "#/backend/entities/Location" },
          "description": "Stores the live location of a specific user for a given trip. Only the user can update their own location. Other trip participants can read it."
        }
      },
       {
        "path": "/trips/{tripId}/participants/{userId}",
        "definition": {
          "entityName": "Participant",
          "schema": { "$ref": "#/backend/entities/Participant" },
          "description": "Stores a user's status and travel choices for a specific trip. Other trip participants can read, but only the user can write to their own document."
        }
      },
      {
        "path": "/ride-clicks/{logId}",
        "definition": {
          "entityName": "RideClickLog",
          "schema": { "$ref": "#/backend/entities/RideClickLog" },
          "description": "Stores telemetry logs for ride-hailing button clicks. Generally, this should be write-only for clients."
        }
      }
    ]
  }
}
